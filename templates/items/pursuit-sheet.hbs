<form class="pursuit" autocomplete="off">
    {{log this}}
    <section class="content">
        <div class="flexcol">
            <h1>Basic</h1>
            <div class="flexrow">
                <label>Name:</label>
                <input name="name" type="text" value="{{item.name}}">
            </div>
            <div class="flexrow">
                <label for="desc">Description:</label>
                <textarea id="desc" name="system.description" rows="4" cols="50">{{item.system.description}}</textarea>
            </div>
            <div class="flexrow">
                <label for="start">Starting With:</label>
                <textarea id="start" name="system.starting_with" rows="2" cols="50">{{item.system.starting_with}}</textarea>
            </div>
            <div class="flexrow">
                <label for="on_p">On Pursuit:</label>
                {{#if on_pursuit}}
                    <button class="remove_talent talent_drop" id="on_pursuit">{{item.system.on_pursuit_talent_name}}</button>
                {{else}}
                    <input class="talent_drop" disabled id="on_pursuit" value="<Talent Here>">
                {{/if}}
            </div>
            <div class="flexcol">
                <h1>Advancement</h1>
                <table class="item-list">
                    <tr>
                        <th>Step</th>
                        <th>ID</th>
                        <th></th>
                    </tr>
                    {{#each item.system.talents as |talent key|}}
                    <tr class="talent talent_drop item" data-index="{{key}}">
                        <td><center>{{key}}</center></td>
                        <td class="flexrow">
                            {{#each talent as |name uuid|}}
                                <button class="remove_talent" data-uuid="{{uuid}}">{{name}}</button>
                            {{/each}}
                        </td>
                        <td><a class="addgeneral"><i class="fas fa-compass"></i></a><a class="removerow"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    {{/each}}
                    <tr>
                        <td></td>
                        <td><a class="addrow"><i class="fas fa-plus"></i></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </section>
</form>